<% provide(:title,' Doctor Signup')  %>

<h1>Doctor - Register for a New Account</h1>
    
<div class="row">
 
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@doc) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name,class: 'form-control',placeholder: "Name" %><br>

      <%= f.label :email%>
      <%= f.email_field :email,class: 'form-control',placeholder: " EmailID" %><br>

      <%= f.label :password %>
      <%= f.password_field :password ,class: 'form-control',placeholder: " Password"%><br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation,class:  'form-control',placeholder: "ReEnter Password" %><br>
 
 
      <%= f.submit "Create my account", class: "btn btn-primary" %>
      
    <% end %>
  </div>
</div>

 

